
@model Justin.Updater.Shared.Config

<form action="/Config/@(ViewBag.SystemId)" method="post" class="form-horizontal" style="width: 1000px; margin: 50px auto">
    <div class="form-group">
        <label for="detectInterval" class="col-sm-2 control-label">更新检测频率（秒）</label>
        <div class="col-sm-10">
            <input type="number" name="detectInterval"
                   class="form-control" id="detectInterval"
                   placeholder="更新检测频率" value="@Model.DetectInterval">
        </div>
    </div>
    <div class="form-group">
        <label for="promptInterval" class="col-sm-2 control-label">更新提示频率（分钟）</label>
        <div class="col-sm-10">
            <input type="number" name="promptInterval"
                   class="form-control" id="promptInterval"
                   placeholder="更新提示频率" value="@Model.PromptInterval">
        </div>
    </div>
    <div class="form-group">
        <label for="promptInterval" class="col-sm-2 control-label">心跳频率（秒）</label>
        <div class="col-sm-10">
            <input type="number" name="pingInterval"
                   class="form-control" id="pingInterval"
                   placeholder="心跳频率" value="@Model.PingInterval">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox" style="display: inline-block">
                <label>
                    <input type="checkbox" value="true" name="detectEnabled" checked="@Model.DetectEnabled"> 启用更新检测
                </label>
            </div>
            <div class="checkbox" style="display: inline-block">
                <label>
                    <input type="checkbox" value="true" name="forceUpdate" checked="@(Model.DetectEnabled && Model.ForceUpdate)"> 强制更新
                </label>
            </div>
            <div class="checkbox" style="display: inline-block">
                <label>
                    <input type="checkbox" value="true" name="keepUpdaterRunning" checked="@(Model.DetectEnabled && Model.KeepUpdaterRunning)"> 更新程序长时间运行
                </label>
            </div>
            <div class="checkbox" style="display: inline-block">
                <label>
                    <input type="checkbox" value="true" name="keepAppRunning" checked="@(Model.DetectEnabled && Model.KeepAppRunning)"> 主程序长时间运行
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">确定</button>
        </div>
    </div>
</form>