@using Justin.Updater.Server.Models.Home
@model SystemEditViewModel

@{ 
    ViewBag.Title = Model.Mode == 1 ? "新增系统信息" : "修改系统信息";
}

<style>
    .thumbnail { margin: 100px auto; text-align: center; width: 50%; }
    .thumbnail img{ border-radius: 20px; margin-bottom: 20px; }
    .thumbnail input[type=text]{ width: 80%; margin: 0 auto; }
    .logo{ width: 80px; height: 80px; }
</style>

<div href="" class="thumbnail" style="margin-top: 100px; text-align: center;">
    <div class="caption">
        <form action="@(Url.RouteUrl("Home", new { action = Model.Mode == 1 ? "New" : "Edit" }))" method="post">
            <img class="logo" src="~/Content/images/logo_ico.png" />
            <div class="form-group">
                <input type="hidden" name="id" value="@Model.SystemId" />
                <input type="text" name="name" value="@Model.Name" class="form-control" placeholder="输入系统名称">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">保存</button>
        </form>
    </div>
</div>


